                <h2>공지사항</h2>
            </div>
            <div class="row content">

                <ul>
                    <%
                    for(var i = 0; i < results.length; i++)
                    {
                        var data = results[i];
                    %>

                    <li class="thing">
                        <i class="bx bx-message-detail icon-msg"></i>
                        <h4><a href="/notice/getBoard?id=<%= data.id %>"><%= data.title %></a></h4>
