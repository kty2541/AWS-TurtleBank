            </div>
        <% } %>
        <div class="container d-flex align-items-center">
            <nav style="flex-shrink:1.1;" id="navbar" class="navbar">
                <ul class="myUl">
                    <!--                    제3 금융권 26등-->
                    <li>
                        <form id="iframe" action="/" method="post">
                            <input type="hidden" name="src" value="http://127.0.0.1:3001/img/info.png"/>
                            <input type="hidden" name="select2" value="info"/>
                            <% if(select2 == "info"){ %>
                                <a class="nav-link scrollto active" style="color: #00f;"
                                   onclick="document.getElementById('iframe').submit();">소개</a>
                            <% }else{ %>
                                <a class="nav-link scrollto" style="color: #6e6e6d;"
                                   onclick="document.getElementById('iframe').submit(); active">소개</a>
                            <% } %>
                        </form>
                    </li>
                    <li>
                        <form id="iframe2" action="/" method="post">
                            <input type="hidden" name="src" value="http://127.0.0.1:3001/img/loan.jpeg"/>
                            <input type="hidden" name="select2" value="loan"/>
                            <% if(select2 == "loan"){ %>
                                <a class="nav-link scrollto active" style="color: #00f;"
                                   onclick="document.getElementById('iframe2').submit();">대출 상품</a>
                            <% }else{ %>
                                <a class="nav-link scrollto" style="color:#6e6e6d"
                                   onclick="document.getElementById('iframe2').submit(); active">대출 상품</a>
                            <% } %>
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</section><!-- End Hero -->
